{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "Node16",
    "moduleResolution": "Node16",

    "rootDir": "src",
    "outDir": "dist",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "types": ["node"]
  },
  "files": ["src/types/global.d.ts", "src/types/ws.d.ts"],
  "include": ["src"],
  "exclude": ["dist", "node_modules", "test"]
}
